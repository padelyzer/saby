# ================================
# CONFIGURACIÓN DE botphIA v1.05
# ================================
# Copiar este archivo a .env y configurar valores reales

# === SEGURIDAD (CRÍTICO - CAMBIAR EN PRODUCCIÓN) ===
JWT_SECRET_KEY=CAMBIAR_ESTO_POR_UN_SECRET_SEGURO_DE_32_CARACTERES
JWT_EXPIRATION_DAYS=7

# === BASE DE DATOS ===
DATABASE_PATH=trading_bot.db
DATABASE_BACKUP_PATH=backups/

# === CORS (Dominios permitidos) ===
# En producción: usar dominios reales separados por comas
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# === BINANCE API ===
# Obtener de: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=tu_api_key_aqui
BINANCE_SECRET_KEY=tu_secret_key_aqui
BINANCE_TESTNET=false

# === AMBIENTE ===
# Opciones: development, staging, production
ENVIRONMENT=development
DEBUG=false

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=logs/botphia.log

# === LÍMITES DE TRADING ===
MAX_POSITIONS_PER_USER=10
MAX_DAILY_TRADES=50
MIN_TRADE_AMOUNT=10

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === USUARIOS DEMO (Solo development) ===
# En producción, dejar vacío o no incluir
DEMO_PASSWORD=Profitz2025!